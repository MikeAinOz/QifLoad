<Window x:Class="QifLoad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="370" Width="1000">
    <Grid Margin="0,0,0,0">
        <TextBox Height="32" HorizontalAlignment="Left" Margin="51,10,0,0" Name="FileNameTextBox"   VerticalAlignment="Top" Width="606" />

        <Button Content="Browse" Height="32" HorizontalAlignment="Left" Margin="681,10,0,0" Name="button1" VerticalAlignment="Top" Width="149" Click="LoadQifFile_Click" />


        <TextBlock x:Name="LoadMessage" HorizontalAlignment="Left" Margin="186,48,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="244"/>
        <DataGrid  AutoGeneratingColumn="OnAutoGeneratingColumn" x:Name="TransactionGrid" HorizontalAlignment="Left" Margin="51,86,0,0" VerticalAlignment="Top" Height="194" Width="892"/>
        <Button x:Name ="SaveAsCsv" Content="Save As CSV" HorizontalAlignment="Left" Margin="51,308,0,0" VerticalAlignment="Top" Width="75" Click="SaveAsCsv_Click" />  
        <Button x:Name="ExitApplication" Content="Exit" HorizontalAlignment="Left" Margin="868,308,0,0" VerticalAlignment="Top" Width="75" Click="ExitApplication_Click"/>
  


    </Grid>
</Window>
